{
  "name": "line-splitter",
  "description": "Transform stream for line splitting",
  "version": "0.4.0",
  "author": "Codenautas <codenautas@googlegroups.com>",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "repository": "emilioplatzer/line-splitter",
  "contributors": [
    {
      "name": "Emilio Platzer",
      "email": "emilioplatzer@gmail.com"
    }
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/express": "~4.16.1",
    "@types/fs-extra": "~5.0.5",
    "@types/js-yaml": "~3.12.0",
    "@types/mocha": "~5.2.6",
    "@types/node": "~11.10.4",
    "@types/send": "~0.14.4",
    "colors": "~1.3.3",
    "mocha": "~6.0.2",
    "nyc": "~13.3.0",
    "sinon": "~7.2.7",
    "source-map-support": "~0.5.10",
    "supertest": "~3.4.2",
    "ts-node": "~8.0.2",
    "typescript": "~3.3.3333",
    "best-globals": "~0.10.10",
    "discrepances": "~0.2.4"
  },
  "main": "dist/server/line-splitter.js",
  "types": "dist/server/line-splitter.d.ts",
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "tsc": "tsc",
    "test": "mocha --reporter spec --bail --check-leaks --exit work/test/",
    "test-ci": "node node_modules/nyc/bin/nyc --reporter=lcov --reporter=text-lcov node_modules/mocha/bin/_mocha --exit --check-leaks work/test/*.js",
    "test-cov": "node node_modules/nyc/bin/nyc node_modules/mocha/bin/_mocha --exit --check-leaks work/test/*.js",
    "build": "(tsc -p tsconfig-server.json || echo \"continue w/error\") && (tsc -p tsconfig-test.json  || echo \"continue w/error\")"
  },
  "nyc": {
    "extension": [
      ".js"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/test"
    ],
    "include": [
      "dist/**/*.js"
    ],
    "x-require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "lcov",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true,
    "check-coverage": true
  },
  "qa-control": {
    "package-version": "0.3.0",
    "run-in": "server",
    "test-appveyor": true,
    "type": "lib",
    "stage": "designing",
    "coverage": 100
  }
}
